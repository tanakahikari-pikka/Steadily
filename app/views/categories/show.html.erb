<div class="container">
  <div class="row">
    <div class="col-xs-9">
      <h2><%= @category.name %>のログ</h2>
      <h3>総学習時間 : <%= @logs_all.sum(:study_record) %>(h) </h3>
      <table class="table table-success table-hover shadow">
        <thead>
          <tr>
            <th class="p-4">タイトル</th>
            <th class="p-4">成果</th>
            <th class="p-4">学習時間</th>
          </tr>
        </thead>
        <tbody>
        <% @logs.each do |log| %>
          <tr>
            <td class="p-4"><%= log.title %></td>
            <td class="p-4"><%= log.achieve %></td>
            <td class="p-4"><%= log.study_record %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <%= paginate @logs %>
    </div>
  <div>
