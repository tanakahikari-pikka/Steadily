<%= form_with model: @log,local:true,  url: logs_path, method: :post do |f| %>
  <div class="form-group">
    <h2>タイトル</h2>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :category_id, 'カテゴリー' %>
    <%= f.collection_select :category_id, Category.all, :id, :name, { prompt: '選択してください' }, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :achieve, '成果' %>
    <%= f.text_area :achieve %>
  </div>
  <div class="kpt">
    <div class="form-group">
      <%= f.label :keep, '良かった点' %>
      <%= f.text_area :keep %>
    </div>
    <div class="form-group">
      <%= f.label :keep, '改善点' %>
      <%= f.text_area :problem %>
    </div>
    <div class="form-group">
      <%= f.label :try, '今後試すこと' %>
      <%= f.text_area :try %>
    </div>
  <div>
  <div class="form-group">
    <%= f.label :study_record, '学習時間' %>
    <%= f.number_field :study_record, step: "0.1" %>
  </div>
  <%= f.submit "記録" %>
<% end %>
