<% options = [['0.5', 0.5],['1', 1], ['1.5', 1.5], ['2', 2], ['2.5', 2.5], ['3', 3], ['3.5', 3.5], ['4', 4],
              ['4.5', 4.5], ['5', 5], ['5.5', 5.5], ['6', 6], ['6.5', 6.5], ['7', 7], ['7.5', 7.5], ['8', 8],
              ['8.5', 8.5], ['9', 9], ['9.5', 9.5], ['10', 10]] %>
<div class="form-group has-success">
  <%= f.label :title, 'ログタイトル' %>
  <%= f.text_field :title, class: 'form-control' %>
</div>
<div class="form-group has-success">
  <%= f.label :category_id, 'カテゴリー' %>
  <%= f.collection_select :category_id, Category.all, :id, :name, { prompt: '選択してください' }, class: 'form-control' %>
</div>
<div class="form-group has-success">
  <%= f.label :achieve, '成果' %>
  <%= f.text_area :achieve, class: 'form-control' %>
</div>
<div class="kpt">
  <div class="form-group has-success">
    <%= f.label :keep, '良かった点' %>
    <%= f.text_area :keep, class: 'form-control' %>
  </div>
  <div class="form-group has-success">
    <%= f.label :keep, '改善点' %>
    <%= f.text_area :problem, class: 'form-control' %>
  </div>
  <div class="form-group has-success">
    <%= f.label :try, '今後試すこと' %>
    <%= f.text_area :try, class: 'form-control' %>
  </div>
<div>
<div class="form-group has-success">
  <%= f.label :study_record, '学習時間 (h)' %>
  <br>
  <%= f.select :study_record, options, {},  {class: 'form-control'} %>
</div>
<div class="w-50 center-block mt-5">
  <% if controller.action_name == "edit" || controller.action_name == "update" %>
    <%= f.submit "編集", class: 'btn-lg btn-success rounded-pill btn-block' %>
  <% end %>
  <% if controller.action_name == "new" || controller.action_name == "create" %>
    <%= f.submit "記録", class: 'btn-lg btn-primary rounded-pill btn-block' %>
  <% end %>
</div>
