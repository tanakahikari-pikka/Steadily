<div class="container">
  <div class="row">
    <div class="col-xs-9">
      <% if user_signed_in? %>
        <% if @user.id == current_user.id %>
          <h2>マイページ</h2>
        <% else %>
          <h2><%= @user.name %>のログ</h2>
        <% end %>
      <% else %>
        <h2><%= @user.name %>のログ</h2>
      <% end %>
      <h3><%= @user.name %>の総学習時間 : <%= @user.logs.sum(:study_record) %>(h) </h3>
      <table class="table table-success table-hover shadow">
        <thead>
          <tr>
            <th class="p-4">ログタイトル</th>
            <th class="p-4">カテゴリ名</th>
            <th class="p-4">成果</th>
            <th class="p-4">学習時間</th>
          </tr>
        </thead>
        <tbody>
        <% @logs.each do |log| %>
            <tr>
                <td class="p-4">
                  <%=link_to log_path(log), class:"text-dark" do %>
                    <%= log.title %>
                  <% end %>
                </td>
                <td class="p-4">
                  <%=link_to category_path(log.category.id), class:"text-dark" do %>
                    <%= log.category.name %>
                  <% end %>
                </td>
                <td class="p-4">
                  <%=link_to log_path(log), class:"text-dark" do %>
                    <%= log.achieve %>
                  <% end %>
                  </td>
                <td class="p-4">
                  <%=link_to log_path(log), class:"text-dark" do %>
                    <%= "%.15g"%log.study_record %>
                  <% end %>
                </td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <%= paginate @logs %>
    </div>
    <div class="col-xs-3">
      <%= button_to "ログアウト", destroy_user_session_path, method: :delete %>
      <h3><%= @user.name %>のカテゴリ一覧</h3>
      <table>
        <% @categories.each do |category| %>
          <tbody>
            <tr>
              <td><%= link_to category.name,category_path(category) %> </td>
            </tr>
          </tbody>
        <% end %>
      </table>
      <div class="row">
        <p>ログ数</p>
        <%= pie_chart @category_logs %>
      </div>
      <div class="row">
        <p>学習時間</p>
        <%= pie_chart @category_study_records %>
      </div>
    </div>
  <div>
<div>
